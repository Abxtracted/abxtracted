@require '_variables'

border-radius($radius)
  -webkit-border-radius  $radius
  -moz-border-radius     $radius
  -ms-border-radius      $radius
  border-radius          $radius

box-sizing($size)
  -webkit-box-sizing $size
  -moz-box-sizing    $size
  box-sizing         $size

clearfix()
  zoom 1
  &:after
    content " "
    display table
    clear both

background-image($filename)
  background-image url($path-images + $filename)
