@require '_variables'
@require '_mixins'

.experiment-status
  position relative
  padding-left 20px
  &:before
    position absolute
    content ' '
    top 50%
    left 0
    width 10px
    height 10px
    border-radius(10px)
    transform('translate(0,-50%)')
  &.experiment-status-valid
    &:before
      background-color $color-green
  &.experiment-status-invalid
    &:before
      background-color $color-red
  &.experiment-status-testing
    &:before
      background-color $color-grey-dark
