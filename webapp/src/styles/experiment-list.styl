@require '_mixins'

.experiment-list
  position relative
  top -30px
  left -30px
  margin 0
  padding 0
  width 990px
  list-style-type none
  clearfix()

.experiment-list-item
  float left
  width 100%
  max-width 300px
  margin 30px 0 0 30px

+breakpoint('xs')
  .experiment-list
    top 0
    left 0
    width 100%
  .experiment-list-item
    margin 0
    max-width none
    &:not(:first-child)
      margin 30px 0 0
