@require '_variables'
@require '_mixins'

.blankslate-container
  margin 0 auto
  padding-top 35px
  width 100%
  max-width 240px

.blankslate
  padding 20px
  text-align center
  border 1px solid $color-grey-dark
  border-radius(3px)
  a
    display inline-block
    margin-top 5px

.blankslate-image
  margin -35px auto 0
  width 140px
  height 140px
  background-position center center
  background-size 100% 100%
  background-repeat no-repeat

.blankslate-text
  margin-top 30px
