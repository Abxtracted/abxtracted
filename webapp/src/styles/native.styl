@require '_variables'
@require '_mixins'

h1, h2, h3, h4, h5, h6
  margin 0
  padding 0
  font-weight normal

body
  padding 0
  margin 0
  background-color $color-blue-dark
  color $color-lightest
  font-family $font-family-primary

a
  color $color-blue
  text-decoration none
  &:hover,
  &:active,
  &:focus
    color $color-blue-semi-light
  &:visited
    color $color-blue

input
  padding 8px
  min-width 300px
  background-color transparent
  color $color-lightest
  border 1px solid $color-lightest
  border-radius(3px)
  &:focus
    color $color-blue-semi-light
    border 1px solid $color-blue-semi-light
    outline 0
  &:disabled
    background-color $color-blue-semi-dark
    border 1px solid $color-blue-semi-dark
    cursor text

label
  color $color-blue
  font-size $font-size-xxs
  font-weight bold
  text-transform uppercase
