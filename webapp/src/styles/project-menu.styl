@require '_variables'
@require '_mixins'

.project-menu
  position absolute
  top 0
  left 0
  padding 30px 0 0
  width 220px
  min-height 100%
  background-color $color-blue-semi-dark
  box-sizing(border-box)

.project-menu-list
  margin-top 30px

.project-menu-list-item
  position relative
  padding 10px 20px
  cursor pointer
  transition(background-color, 500ms)
  clearfix()
  &:hover
    background-color alpha($color-blue, 0.25)
  .icon
    float left
    top 3px

.project-menu-list-item-label
  float left
  padding-left 10px
  line-height 24px

.project-menu-add-button-container
  margin 0 auto
  width 180px
