@require '_variables'
@require '_mixins'
@require 'native'

.experiment-card-container
  position relative
  overflow hidden
  border-radius(3px)

.experiment-card
  padding 20px 0 0
  background-color alpha($color-white, 0.1)
  box-sizing(border-box)

.experiment-card-title-container
  position relative
  padding 0 20px 0 50px
  font-size $font-size-xl
  box-sizing(border-box)
  .icon
    position absolute
    top 50%
    left 20px
    transform('translate(0,-50%)')

.experiment-card-subtitle
  display inline-block

.experiment-card-subtitle-container
  padding 0 20px
  margin-top 5px
  font-size $font-size-xs
  opacity 0.5
  .icon
    &:before
      transform('rotate(-235deg)')

.experiment-card-subtitle
  margin-left 10px

.experiment-card-delete-container
  position absolute
  top -24px
  right -8px
  color alpha($color-white, 0.5)
  font-size $font-size-xs
  cursor pointer
  &:hover
    color $color-white
    .experiment-card-delete
      background-color $color-red


.experiment-card-delete
  padding 24px 12px 24px 6px
  background-color alpha($color-red-semi-light, 0.5)
  transform('rotate(-45deg)')
  .icon
    &:before
      transform('rotate(45deg)')

.experiment-card-details
  padding 30px 20px 29px

.experiment-card-detail-label
  @extend label
  &:not(:first-child)
    margin-top 10px

.experiment-card-detail-value
  margin-top 5px

.experiment-card-details-button
  margin-top 21px
  padding 10px 0
  font-size $font-size-xs
  text-transform uppercase
  text-align center
  border-top 1px solid alpha($color-white, 0.25)
  cursor pointer
  &:hover
    background-color alpha($color-white, 0.2)

.experiment-card-scenarios-container
  margin 20px -20px -30px
  padding 20px 0 0
  border-top 1px solid alpha($color-blue-dark, 0.75)
  box-sizing(border-box)
  clearfix()

.experiment-card-scenario
  float left
  width 50%
  text-align center
  box-sizing(border-box)

.experiment-card-scenario-label
  @extend label

.experiment-card-scenario-value
  display inline-block
  margin-top 5px
  position relative
  font-size $font-size-xl
  &:after
    position absolute
    content '%'
    top 50%
    right -15px
    font-size 0.5em
    transform('translate(0,-50%)')

.experiment-card-scenario-action
  margin 20px 0.5px 0
  font-size $font-size-xxs
  text-transform uppercase
  .button
    padding 0
    border-radius(0 0 0 3px)

.experiment-card-scenario-Variation
  float right
  .button
    border-radius(0 0 3px 0)
