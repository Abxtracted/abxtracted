@require '_mixins'

.price-bang-container
  margin 0 auto
  max-width 200px
  text-align center

.price-bang-value
  position relative
  font-size 9em
  &:before
    position absolute
    top 50%
    left -5px
    font-size 0.25em
    content '$'
    translate-2d(0, -50%)

.price-bang-caption
  position relative
  top -15px
