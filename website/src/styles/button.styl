@require '_variables'
@require '_mixins'

a
  &.button
    text-decoration none
    display inline-block

.button
  margin 0
  padding 0
  min-width 40px
  max-width 100%
  min-height 40px
  background-color $color-grey
  color $color-grey-dark
  font-size $font-size-sm
  text-align center
  line-height 40px
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
  border-width 1px
  border-style solid
  border-color $color-grey
  outline 0
  cursor pointer
  border-radius(3px)
  box-sizing(border-box)
  &:hover,
  &:active
    outline 0
  &.button-primary,
  &.button-secondary
    padding 0 20px
  &.button-primary
    background-color $color-primary
    color $color-white
    text-shadow 0 -1px 0 $color-blue-dark
    border-color $color-primary
    &:hover,
    &:active
      background-color $color-blue-semi-light
      border-color $color-primary
      outline 0
  &.button-secondary
    background-color transparent
    color $color-white
    border-color $color-white
    &:hover,
    &:active
      background-color alpha($color-white, 0.2)
      border-color $color-white
  &.button-circled
    padding 0
    width 40px
    height 40px
    border-radius(50%)
