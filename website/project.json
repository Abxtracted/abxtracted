{
  "paths": {
    "index": {
      "source": {
        "root": "src",
        "file": "src/index.html"
      },
      "dist": {
        "root": "./",
        "file": "./index.html"
      }
    },
    "scripts": {
      "source": {
        "root": "src/scripts/",
        "files": "src/scripts/**/*.js",
        "main": "src/scripts/main.js",
        "boot": "src/scripts/boot.js"
      },
      "spec": {
        "root": "spec/",
        "files": "spec/**/*-spec.js",
        "main": "spec/main.js",
        "config": "karma.conf.js"
      },
      "vendor": {
        "requirejs": "node_modules/requirejs/require.js",
        "jquery": "node_modules/jquery/dist/jquery.min.js"
      },
      "dist": {
        "bundle": "dist/scripts/bundle.min.js",
        "vendor": {
          "root": "dist/vendor/scripts/",
          "requirejs": "dist/vendor/scripts/require.min.js",
          "jquery": "dist/vendor/scripts/jquery.min.js"
        }
      }
    },
    "styles": {
      "source": {
        "files": "src/styles/**/*.styl"
      },
      "vendor": {
        "files": [
          "node_modules/ggrid/dist/ggrid.min.css",
          "node_modules/ionicons/css/ionicons.min.css"
        ]
      },
      "dist": {
        "bundle": "dist/styles/bundle.min.css",
        "vendor": {
          "bundle": "dist/vendor/styles/vendor.min.css"
        }
      }
    },
    "images": {
      "source": {
        "root": "src/images/",
        "files": "src/images/**/*.*"
      },
      "dist": {
        "root": "dist/images/"
      }
    },
    "fonts": {
      "icons": {
        "root": "node_modules/ionicons/fonts/"
      },
      "dist": {
        "vendor": {
          "root": "dist/vendor/fonts/"
        }
      }
    }
  }
}
